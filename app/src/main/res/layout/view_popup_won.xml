<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt_games_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games Played: "
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/txt_6_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6-Letter Words Found: "
        />
    <TextView
        android:id="@+id/txt_most_words_in_a_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Words Found In A Game: "
        />
    <TextView
        android:id="@+id/txt_games_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Games Won : "
        />


</LinearLayout>